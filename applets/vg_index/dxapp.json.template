{
  "name": "vg_index",
  "title": "vg_index",
  "summary": "vg_index",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "vg_tar",
      "class": "file",
      "optional": false,
      "type": "vg_tar",
      "patterns": ["*.vg.tar"]
    },
    {
      "name": "prune_complex_options",
      "class": "string",
      "default": "-l 16 -e 3"
    },
    {
      "name": "prune_subgraphs_options",
      "class": "string",
      "default": "-l 32"
    },
    {
      "name": "kmers_options",
      "class": "string",
      "default": "-k 16 -F"
    },
    {
      "name": "gcsa_options",
      "class": "string",
      "default": "-Z 1500 -X 2"
    }
  ],
  "outputSpec": [
    {
      "name": "vg_indexed_tar",
      "class": "file",
      "type": "vg_indexed_tar",
      "patterns": ["*.vg.indexed.tar"]
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/code.sh",
    "execDepends": [{"name": "libjansson4"}],
    "bundledDepends": [
      {
        "name": "vg_bundle.tar.gz",
        "id": {"$dnanexus_link": "VG_BUNDLE_DXID"}
      }
    ],
    "systemRequirements": {
      "main": {
        "instanceType": "mem1_ssd1_x2"
      },
      "xg": {
        "instanceType": "mem3_ssd1_x32"
      },
      "kmers": {
        "instanceType": "mem3_ssd1_x8"
      },
      "gcsa": {
        "instanceType": "dx_i2.4xlarge"
      }
    },
    "distribution": "Ubuntu",
    "release": "14.04"
  },
  "access": {
    "network": ["*"]
  },
  "authorizedUsers": []
}
