{
  "name": "vg_bundle_builder",
  "title": "vg_bundle_builder",
  "summary": "vg_bundle_builder",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "git_commit",
      "label": "Git Commit/Ref",
      "class": "string",
      "optional": true,
      "default": "master"
    },
    {
      "name": "git_url",
      "label": "Git Repo URL",
      "class": "string",
      "optional": true,
      "default": "https://github.com/ekg/vg.git"
    }
  ],
  "outputSpec": [
    {
      "name": "vg_bundle",
      "class": "file",
      "patterns": ["*.tar.gz"],
      "type": "vg_bundle"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/vg_bundle_builder.sh",
    "execDepends": [
      {"name": "samtools"},
      {"name": "tabix"},
      {"name": "libjansson-dev"},
      {"name": "automake"},
      {"name": "libtool"},
      {"name": "libncurses-dev"},
      {"name": "libbz2-dev"},
      {"name": "cmake"},
      {"name": "libbison-dev"},
      {"name": "bison"},
      {"name": "libfl-dev"},
      {"name": "flex"},
      {"name": "raptor2-utils"},
      {"name": "rasqal-utils"}
    ],
    "systemRequirements": {
      "main": {
        "instanceType": "mem1_ssd1_x8"
      }
    },
    "distribution": "Ubuntu",
    "release": "14.04"
  },
  "access": {
    "network": ["*"]
  },
  "authorizedUsers": []
}
